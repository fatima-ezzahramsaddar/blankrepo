{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "ESNext",
        "target": "es2022",
        "lib": [
            "es2022",
            "dom"
        ],
        "types": [
            "node",
            "@wdio/globals/types",
            "expect-webdriverio",
            "@wdio/mocha-framework",
            "@wdio/visual-service",
            "@wdio/sync",
            "@wdio/types"
        ],
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,        
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": false,
        "strictPropertyInitialization": false,
       "strictNullChecks": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "dist",
    },
    "include":["./test/**/*.ts"]
}